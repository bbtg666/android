<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#9503C4F4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/cbKinh"
            android:layout_weight="1"
            android:text="Glasses"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/cbRau"
            android:text="Beard"
            android:textSize="35dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/cbTai"
            android:layout_weight="1"
            android:text="Ear"
            android:textSize="35dp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:layout_width="206dp"
            android:layout_height="745dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_weight="3"
            android:src="@drawable/emgai"
           />

        <ImageView
            android:layout_width="206dp"
            android:layout_height="673dp"
            android:layout_gravity="center"
            android:layout_marginTop="5.4dp"
            android:layout_marginRight="35.8dp"
            android:layout_weight="2"
            android:scaleType="center"
            android:scaleX="0.6"
            android:scaleY="0.48"
            android:src="@drawable/matkinh"
            android:id="@+id/imgKinh"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="206dp"
            android:layout_height="673dp"
            android:layout_gravity="center"
            android:layout_marginTop="51dp"
            android:layout_marginRight="38dp"
            android:layout_weight="2"
            android:scaleType="center"
            android:scaleX="0.59"
            android:scaleY="0.6"
            android:src="@drawable/rau"
            android:visibility="invisible"
            android:id="@+id/imgRau"/>

        <ImageView
            android:id="@+id/imgTai"
            android:layout_width="206dp"
            android:layout_height="673dp"
            android:layout_gravity="center"
            android:layout_marginBottom="49.5dp"
            android:layout_marginRight="33dp"
            android:layout_weight="2"
            android:scaleType="center"
            android:scaleX="0.57"
            android:scaleY="0.6"
            android:src="@drawable/tai"
            android:visibility="invisible" />
    </FrameLayout>


</LinearLayout>